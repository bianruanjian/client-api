{
	"name": "client-api",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "git@github.com:bianruanjian/client-api.git"
	},
	"dependencies": {
		"@dojo/has": "^2.0.0-beta2.2",
		"bulma": "^0.5.1",
		"hexo": "^3.3.9",
		"hexo-renderer-yasr": "^4.0.0",
		"normalize.css": "^8.0.0",
		"tslib": "^1.6.0"
	},
	"devDependencies": {
		"@dojo/loader": "^2.0.0-beta1.1",
		"@types/archiver": "^0.15.37",
		"@types/github": "0.0.0",
		"@types/grunt": "^0.4.21",
		"@types/mockery": "^1.4.29",
		"@types/node": "^6.0.55",
		"@types/sinon": "^2.1.2",
		"archiver": "^1.3.0",
		"cross-env": "^5.1.4",
		"dojo-core": "^2.0.0-alpha.18",
		"dojo-has": "^2.0.0-alpha.6",
		"dojo-interfaces": "^2.0.0-alpha.10",
		"dojo-shim": "^2.0.0-beta.7",
		"dojo-streams": "^2.0.0-alpha.1",
		"grunt": "^1.0.1",
		"grunt-concurrent": "~2.3.1",
		"grunt-contrib-clean": "^1.0.0",
		"grunt-dojo2": "^2.0.0-beta2.15",
		"grunt-dojo2-extras": "^2.0.0-beta1.3",
		"grunt-shell": "^2.1.0",
		"grunt-tslint": "^4.0.1",
		"tslint": "5.11.0",
		"intern": "~4.1.0",
		"load-grunt-tasks": "^3.5.2",
		"mockery": "^2.0.0",
		"sinon": "^2.1.0",
		"ts-node": "^3.3.0",
		"tslint-sitepen": "^0.1.0",
		"typescript": "~2.4.2",
		"webserv": "^0.6.1"
	},
	"scripts": {
		"precommit": "lint-staged",
		"prettier": "prettier --write 'src/**/*.ts' 'src/**/*.json' 'src/**/*.css' 'tests/**/*.ts'",
		"build": "cross-env NODE_ENV=production grunt",
		"install": "cd site && npm i",
		"serve": "grunt webserv"
	},
	"prettier": {
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "always",
		"overrides": [
			{
				"files": [
					"*.json",
					".eslintrc",
					".tslintrc",
					".prettierrc",
					".tern-project"
				],
				"options": {
					"parser": "json"
				}
			},
			{
				"files": "*.{css,sass,scss,less}",
				"options": {
					"parser": "postcss"
				}
			},
			{
				"files": "*.ts",
				"options": {
					"parser": "typescript"
				}
			}
		]
	}
}
